{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "dom"],
    "downlevelIteration": true,
    "module": "commonjs",
    "strict": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "declaration": true,
    "sourceMap": false,
    "outDir": "dist",
    "jsx": "react",
  },
  "include": ["src/**/*", "__tests__/**/*"]
}
